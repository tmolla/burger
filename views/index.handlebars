<div class="container" style="margin-top:50px; border:1px solid black">
  <div class="row">
    <div class="col-sm">
      <h2>Ready Burgers!</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
        <h2>Add a Burger</h2>
        <img src="/assets/img/burger.jpeg" alt="Burger">
        <form class="create-form">
            <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger" name="name">
            </div>
            {{!-- <button type="button" class="btn btn-info">Submit</button> --}}
            <button type="submit">Submit</button>
        </form>
    </div>
    <div class="col-sm">
        <h2>Devoured Burgers!</h2>
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block}}
              {{/if}}
            {{/each}}
          </ul>
    </div>
  </div>
</div>c
