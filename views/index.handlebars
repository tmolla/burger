<div class="container-fluid main-container">
 
  <div class="row">
	<div class="col-sm middle-container">
     <h1 class="header">Eat Da Burger</h1>
      <img src="/assets/img/burger.png" alt="Burger">

    <div style="text-align:left">
      <form class="create-form">
        <div class="form-group">
            <label for="burger">Burger Name</label>
            <input type="text" class="form-control input-sm" id="burger" placeholder="what's da burger name?" required>
        </div>
        <button type="submit" class="btn btn-primary btn-sm">Submit</button>
      </form>
      </div>
    </div>   
   
    <div class="col-sm left-container">
      <h3>Ready Burgers!</h3>
      <ol>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block}}
          {{/unless}}
        {{/each}}
      </ol>
    </div>
    
    <div class="col-sm right-container">
        <h3>Devoured Burgers!</h3>
          <ol>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block}}
              {{/if}}
            {{/each}}
          </ol>
    </div>
  </div>
</div>
